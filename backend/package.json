{
  "name": "backend",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "build": "tsc",
    "prestart": "pnpm db:migrate",
    "start": "node --env-file=.env ./dist/src",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "dev:db:start": "docker compose -f docker-compose.dev.yml up",
    "dev:db:delete": "docker compose -f docker-compose.dev.yml down -v",
    "dev:db:seed": "tsx --env-file=.env src/db/seed.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-openapi": "^0.18.3",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@scalar/hono-api-reference": "^0.5.170",
    "arctic": "^1.9.2",
    "better-auth": "^1.1.15",
    "drizzle-orm": "^0.37.0",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.6.20",
    "hono-pino": "^0.6.0",
    "pino": "^9.5.0",
    "pino-pretty": "^12.1.0",
    "postgres": "^3.4.4",
    "resend": "^4.1.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.6",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.29.1",
    "prettier": "^3.4.2",
    "tsx": "^4.7.1",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": "22.x"
  }
}
