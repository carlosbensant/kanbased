{
  "name": "backend",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=.env ./dist/src",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx --env-file=.env src/db/seed.ts",
    "db:push": "npx drizzle-kit push",
    "db:studio": "npx drizzle-kit studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev:start-db": "docker compose -f docker-compose.dev.yml up",
    "dev:delete-db": "docker compose -f docker-compose.dev.yml down -v"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/swagger-ui": "^0.4.0",
    "@hono/zod-openapi": "^0.14.9",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@scalar/hono-api-reference": "^0.5.154",
    "arctic": "^1.9.2",
    "drizzle-orm": "^0.37.0",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.4.13",
    "hono-pino": "^0.6.0",
    "pino": "^9.5.0",
    "pino-pretty": "^12.1.0",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.29.1",
    "prettier": "^3.4.2",
    "tsx": "^4.7.1",
    "typescript": "^5.5.3"
  }
}
